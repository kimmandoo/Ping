<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
    
    </data>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.ui.feature.map.PingMapFragment">
        
        <ProgressBar
            android:id="@+id/map_progress"
            tools:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/map_fragment_view"
            android:layout_width="match_parent"
            tools:visibility="visible"
            android:layout_height="match_parent"
            android:visibility="invisible">
            
            
            <TextView
                android:id="@+id/map_detail_fixed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="세부사항입니다."
                android:textSize="32dp"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="@id/guideline" />
            
            <TextView
                android:id="@+id/map_location_fixed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ping_map_location"
                android:textSize="24dp"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toBottomOf="@+id/map_detail_fixed" />

            
            <TextView
                android:id="@+id/map_distance_fixed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ping_map_distance"
                android:textSize="24dp"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toBottomOf="@+id/map_location_fixed" />

            
            <TextView
                android:id="@+id/map_organizer_fixed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ping_map_open_user"
                android:textSize="24dp"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toBottomOf="@+id/map_distance_fixed" />

            
            <TextView
                android:id="@+id/map_content_fixed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ping_map_content"
                android:textSize="24dp"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toBottomOf="@+id/map_organizer_fixed" />

            
            
            <View
                android:id="@+id/guideline"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                app:layout_constraintTop_toTopOf="parent" />
            
            
            <Button
                android:id="@+id/map_btn_gathering"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="go"
                app:layout_constraintBottom_toBottomOf="@id/guideline"
                app:layout_constraintStart_toStartOf="@id/guideline" />
            
            <com.naver.maps.map.MapView
                android:id="@+id/map_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/guideline" />
            
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/map_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/map_point_wave_svgrepo_com"
                android:visibility="gone"
                app:fabSize="mini"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        
        </androidx.constraintlayout.widget.ConstraintLayout>
    
    
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>