<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        tools:context=".ui.ui.feature.map.PingMapFragment">

        <ProgressBar
            android:id="@+id/map_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/map_fragment_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">



            <TextView
                android:id="@+id/map_detail_fixed"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="세부사항입니다."
                android:textSize="32dp"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="@id/guideline"
                />

            <TextView
                android:id="@+id/map_location_fixed"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="장소:"
                android:textSize="24dp"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toBottomOf="@+id/map_detail_fixed"
            />

            <TextView
                android:id="@+id/map_location"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                tools:text="장소가 들어옵니다."
                android:textSize="24dp"
                app:layout_constraintStart_toEndOf="@+id/map_location_fixed"
                app:layout_constraintTop_toBottomOf="@+id/map_detail_fixed"
                />

            <TextView
                android:id="@+id/map_distance_fixed"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="현재 위치에서의 거리:"
                android:textSize="24dp"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toBottomOf="@+id/map_location_fixed"
                />

            <TextView
                android:id="@+id/map_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                app:layout_constraintStart_toEndOf="@+id/map_distance_fixed"
                app:layout_constraintTop_toBottomOf="@id/map_location_fixed" />

            <TextView
                android:id="@+id/map_organizer_fixed"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="주최자:"
                android:textSize="24dp"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toBottomOf="@+id/map_distance_fixed"
                />

            <TextView
                android:id="@+id/map_organizer"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                tools:text=""
                android:textSize="24dp"
                app:layout_constraintStart_toStartOf="@+id/map_organizer_fixed"
                app:layout_constraintTop_toBottomOf="@+id/map_distance_fixed"
                />

            <TextView
                android:id="@+id/map_content_fixed"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="내용:"
                android:textSize="24dp"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toBottomOf="@+id/map_organizer_fixed"
                />

            <TextView
                android:id="@+id/map_content"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                tools:text="내용입니다."
                android:textSize="24dp"
                app:layout_constraintStart_toStartOf="@+id/map_content_fixed"
                app:layout_constraintTop_toBottomOf="@+id/map_organizer_fixed"
                />



            <View
                android:id="@+id/guideline"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                app:layout_constraintTop_toTopOf="parent" />

            <com.naver.maps.map.MapView
                android:id="@+id/map_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/guideline" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/map_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:src="@drawable/map_point_wave_svgrepo_com"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>